{{model.server.connectionUser.nickname}}
<ul class="messages">
  {{#each message in model.messages}}
  <li>
    <span class="time">{{message.time}}</span>
    <span class="user">{{message.user.nickname}}:</span>
    <span class="message">{{message.message}}</span>
  </li>
  {{/each}}
</ul>

{{input id="message-input" value=messageInput}}
<button 
  id="message-submit"
  {{action
    "sendMessage"
    messageInput
    model
  }}>Send</button>